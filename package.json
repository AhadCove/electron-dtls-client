{
  "name": "node-dtls-client",
  "version": "0.3.2",
  "description": "DTLS protocol implementation for Node.js written in TypeScript.",
  "main": "./build/dtls.js",
  "types": "./build/dtls.d.ts",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "homepage": "https://github.com/AlCalzone/node-dtls-client",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/debug": "0.0.30",
    "@types/mocha": "^2.2.43",
    "@types/node": "^6.0.88",
    "@types/yargs": "^11.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "colors": "^1.2.3",
    "coveralls": "^3.0.0",
    "mocha": "^3.5.3",
    "nyc": "^11.7.1",
    "proxyquire": "^2.0.1",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "sinon": "^5.0.1",
    "sinon-chai": "^3.0.0",
    "source-map-support": "^0.4.18",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "yargs": "^11.0.0"
  },
  "dependencies": {
    "debug": "^3.0.1",
    "node-aead-crypto": "^1.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/node-dtls-client.git"
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf ./build",
    "watch": "tsc --watch",
    "test:ts": "node_modules/.bin/mocha",
    "test": "npm run test:ts",
    "coverage": "node_modules/.bin/nyc npm test",
    "coveralls": "node_modules/.bin/nyc report --reporter=text-lcov | coveralls -v",
    "show-coverage": "npm run coverage && start ./coverage/index.html",
    "lint:ts": "tslint",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "release": "node --require ts-node/register maintenance/release.ts"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "build/**",
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "readme": "README.md"
}
