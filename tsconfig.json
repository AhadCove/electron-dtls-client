{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "noEmitOnError": false,
        "noImplicitAny": false,
        "outDir": "build",
        "removeComments": false,
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
