{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "build/",
		"moduleResolution": "node",
		"module": "commonjs",
		"declaration": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"removeComments": false,
		"stripInternal": true,
		"noUnusedLocals": true,
		"target": "es2015",
		"watch": false // true breaks circleci
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "build/**", "node_modules/**"]
}
